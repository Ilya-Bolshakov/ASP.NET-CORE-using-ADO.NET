@model IList<Entities.User>


@{
    ViewData["Title"] = "Список всех пользователей";
}

<h1>Пользователи</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Дата рождения</th>
        <th>Возраст</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <a asp-controller="User" asp-action="GetAllAwardsOfCurrentUser" asp-route-id="@item.ID">@item.ID</a>
    </td>
    <td>
        <a asp-controller="User" asp-action="GetAllAwardsOfCurrentUser" asp-route-id="@item.ID">@item.FirstName</a>
    </td>
    <td>
        <a asp-controller="User" asp-action="GetAllAwardsOfCurrentUser" asp-route-id="@item.ID">@item.LastName</a>
    </td>
    <td>
        <a asp-controller="User" asp-action="GetAllAwardsOfCurrentUser" asp-route-id="@item.ID">@item.BirthDate.ToShortDateString()</a>
    </td>
    <td>
        <a asp-controller="User" asp-action="GetAllAwardsOfCurrentUser" asp-route-id="@item.ID">@item.Age</a>
    </td>
</tr>
    }
</table>

