@using UsersAndAwardsWEB.Models.ViewModel;
@model AwardViewModel

@{
    ViewData["Title"] = "Добавить награду";
}

<h1>Добавление награды</h1>

<form asp-action="AddAward" class="formDIVs">
    <div>
        <label for="title">Введите название награды: </label>
        <input asp-for="Title" id="title" required class="inputs">
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label for="description">Введите описание награды: </label>
        <textarea asp-for="Description" id="description" required class="inputs"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <button class="btn" type="submit" id="bAdd">Добавить награду</button>
    </div>

</form>

